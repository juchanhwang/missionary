# Database (AWS RDS — sslmode=no-verify: 자체서명 인증서 허용)
DATABASE_URL="postgresql://username:password@rds-endpoint:5432/missionary_db_dev?schema=public&sslmode=no-verify"

# Application
NODE_ENV=development
PORT=3100

# JWT (REQUIRED)
JWT_SECRET=change-me-to-a-secure-secret
JWT_REFRESH_SECRET=change-me-to-a-secure-refresh-secret

# Cookie
COOKIE_SECURE=false

# AES Encryption (REQUIRED - 64-char hex)
AES_ENCRYPT_KEY=change-me-64-char-hex-use-openssl-rand-hex-32

# Google OAuth (disabled until domain configured)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=

# Kakao OAuth (disabled until domain configured)
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
KAKAO_CALLBACK_URL=

# Client URLs
ADMIN_CLIENT_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis (overridden by docker-compose environment)
REDIS_HOST=localhost
REDIS_PORT=6379
