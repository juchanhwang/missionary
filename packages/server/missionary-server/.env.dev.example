# Database (RDS)
DATABASE_URL="postgresql://username:password@rds-endpoint:5432/missionary_db?schema=public"
NODE_ENV="production"

# Server Configuration
PORT=3100
CORS_ORIGINS="https://app.example.com,https://admin.example.com"

# JWT Secrets
JWT_SECRET="your-jwt-secret-change-in-production"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-change-in-production"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://api.example.com/auth/google/callback"

# Kakao OAuth
KAKAO_CLIENT_ID="your-kakao-client-id"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"
KAKAO_CALLBACK_URL="https://api.example.com/auth/kakao/callback"

# Client URLs
ADMIN_CLIENT_URL="https://admin.example.com"

# Encryption
AES_ENCRYPT_KEY="your-32-byte-hex-key-change-in-production"

# Security
COOKIE_SECURE=true

# Redis Configuration (Docker Compose service name)
REDIS_HOST=redis
REDIS_PORT=6379
