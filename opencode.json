{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "gcp": {
      "type": "local",
      "command": ["npx", "-y", "@google-cloud/gcloud-mcp"]
    },
    "figma": {
      "type": "local",
      "command": ["figma-developer-mcp", "--stdio"],
      "env": {
        "FIGMA_API_KEY": "${FIGMA_API_KEY}"
      }
    }
  }
}
