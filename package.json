{
  "name": "missionary",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier 'packages/**/src/**/*.{json,yaml,md,js,ts,tsx}' --check",
    "prettier:fix": "prettier 'packages/**/src/**/*.{json,yaml,md,js,ts,tsx}' --write",
    "stylelint": "stylelint './packages/**/src/**/*.{css,scss}'",
    "stylelint:fix": "stylelint './packages/**/src/**/*.{css,scss}' --fix",
    "lint:all": "pnpm lint && pnpm prettier && pnpm stylelint",
    "lint:fix:all": "pnpm lint:fix && pnpm prettier:fix && pnpm stylelint:fix",
    "type-check": "tsc --noEmit -p packages/design-system && tsc --noEmit -p packages/missionary-admin && tsc --noEmit -p packages/missionary-app && tsc --noEmit -p packages/missionary-server",
    "dev:admin": "pnpm --filter missionary-admin dev",
    "dev:app": "pnpm --filter missionary-app dev",
    "dev:ds": "pnpm --filter design-system dev",
    "dev:server": "pnpm --filter missionary-server dev",
    "dev:all": "pnpm dev:admin & pnpm dev:app & pnpm dev:ds & pnpm dev:server",
    "build:admin": "pnpm --filter missionary-admin build",
    "build:app": "pnpm --filter missionary-app build",
    "build:ds": "pnpm --filter design-system build",
    "build:server": "pnpm --filter missionary-server build",
    "build:all": "pnpm build:admin & pnpm build:app & pnpm build:ds & pnpm build:server",
    "sb:ds": "pnpm --filter design-system storybook",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "16.1.6",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^22.15.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.28.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}